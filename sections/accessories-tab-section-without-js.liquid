<style>
  .tab-buttons-wrapper {
    margin: 50px auto;
  }
  .tab-buttons button{
    cursor: pointer;
    background: none;
    border: 1px solid black;
    padding: 10px 20px;
    margin-right: 10px;
  }
  .tab-buttons button.active{
    background: black;
    color: white;
  }
  .tab-content .products {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
  }
  .tab-content .products .product {
    width: 30%;
  }
  .tab-content .products .product img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }
  .tab-content .products .product p {
    text-align: center;
  }
</style>

<div class="page-width tab-buttons-wrapper">
  <div class="tab-buttons">
    <button class="active" data-tab="necklace" id="btn-necklace">ネックレス</button>
    <button data-tab="ring" id="btn-ring">リング</button>
  </div>

  <div class="tab-content" data-tab="necklace" id="content-necklace">
    <div class="products">
      {% for product in collections.necklace.products %}
        <div class="product">
          <img src="{{ product.featured_media | image_url: width: 500 }}" width="500" height="500">
          <p>{{ product.title }}</p>
        </div>
      {% endfor %}
    </div>
  </div>

  <!--  -->
  <div class="tab-content" data-tab="ring" id="content-ring" style="display: none;">
    <div class="products">
      {% for product in collections.ring.products %}
        <div class="product">
          <img src="{{ product.featured_media | image_url: width: 500 }}" width="500" height="500">
          <p>{{ product.title }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  window.addEventListener('load', function(){
    // ネックレスボタンをクリックした際
    document.querySelector("#btn-necklace").addEventListener("click", function(){
      // クリックされた時の処理
      // ネックレスコンテンツを表示
      document.querySelector("#content-necklace").style.display = "block";
      // リングコンテンツを非表示
      document.querySelector("#content-ring").style.display = "none";
      // ネックレスボタンをアクティブにする
      document.querySelector("#btn-necklace").classList.add("active");
      // リングボタンを非アクティブにする
      document.querySelector("#btn-ring").classList.remove("active");
    });

    // リングボタンをクリックした際
    document.querySelector("#btn-ring").addEventListener("click", function(){
      // クリックされた時の処理
      // リングコンテンツを表示
      document.querySelector("#content-necklace").style.display = "none";
      // リングコンテンツを表示
      document.querySelector("#content-ring").style.display = "block";
      // リングボタンをアクティブにする
      document.querySelector("#btn-ring").classList.add("active");
      // ネックレスボタンを非アクティブにする
      document.querySelector("#btn-necklace").classList.remove("active");
    });
  });
</script>

