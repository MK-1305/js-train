<style>
  .accordion-wrapper {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .accordion-header {
    background-color: black;
    color: white;
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .accordion-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
  }
  .accordion-header svg{
    stroke: white;
  }
  .accordion-header .minus-icon{
    display: none;
  }
  .accordion-header.active .plus-icon{
    display: none;
  }
  .accordion-header.active .minus-icon{
    display: block;
  }
  .accordion-content {
    padding: 0 20px;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, padding 0.4s ease;
  }
  .accordion-header.active + .accordion-content {
    max-height: 500px;
    padding: 20px 20px;
  }
  @media only screen and (max-width: 600px) {
    .accordion-header {
      padding: 10px;
    }
    .accordion-content {
      padding: 0 10px;
    }
    .accordion-header.active + .accordion-content {
      max-height: 500px;
      padding: 10px 10px;
    }
  }
</style>

<div class="page-width">
  <h2>よくある質問</h2>
  <div class="accordion-wrapper">

    <!-- アコーディオンアイテム1: 送料について -->
