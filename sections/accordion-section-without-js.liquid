<script>
  window.addEventListener('load', function(){
      
    // 1個目の アコーディオン開閉処理
    document.querySelector("#accordion-header-1").addEventListener('click', function(){
      // ここにクリックされた時の処理をかく
      if(document.querySelector("#accordion-header-1").classList.contains("active")){
        // active クラスが既に存在している場合 = アコーディオンが開いている場合 → activeクラスを消去
        document.querySelector("#accordion-header-1").classList.remove("active");
      }else{
        // active クラスが存在していない場合 = アコーディオンが閉じている場合 → activeクラスを追加
        document.querySelector("#accordion-header-1").classList.add("active");
      }
    });

